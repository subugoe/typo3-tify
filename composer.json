{
  "name": "subugoe/tify",
  "description": "tify integration for TYPO3",
  "type": "typo3-cms-extension",
  "license": "AGPL-3.0-or-later",
  "authors": [
    {
      "name": "Ingo Pfennigstorf",
      "email": "pfennigstorf@sub.uni-goettingen.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "Subugoe\\Tify\\": "Classes/"
    }
  },
  "require": {
    "php": "^7.4 || ^8.0",
      "typo3/cms-core": "^10.4 || ^11.5"
  },
  "extra": {
     "typo3/cms": {
        "extension-key": "tify"
     }
  },
  "config": {
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "rector/rector": "^0.13.3"
  },
  "scripts": {
    "rector-lint": "rector process --dry-run",
    "rector-fix": "rector process",
    "php-cs-lint": "php-cs-fixer fix --dry-run",
    "php-cs-fix": "php-cs-fixer fix",
    "lint":  [
      "@php-cs-lint",
      "@rector-lint"
    ],
    "fix":  [
      "@php-cs-fix",
      "@rector-fix"
    ]
  }
}
